@model  IEnumerable<SalesWebMvc.Models.Vendedor>


@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Novo" class="btn btn-default">Novo Vendedor</a>
</p>

<table class=" table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>

                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioBase)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhess</a>
                <a asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>

        }

    </tbody>



</table>